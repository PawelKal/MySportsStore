@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null,
    new { @class = "btn btn-secondary btn-block btn-lg" })


@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Product",
        action = "List",
        category = link,
        page = 1
    }, new
    {
        @class = "btn btn-block btn-secondary btn-lg" + (link==ViewBag.SelectedCategory ?"btn-danger":"")

    })
}
